#!/bin/sh

echo "-----Updating UFOs from Glyphs file..."
psfglyphs2ufo --nofea source/CharisSILRoman.glyphs source   &
psfglyphs2ufo --nofea source/CharisSILItalic.glyphs source  &
wait

echo "-----Normalizing Regular UFO..."
echo "-----Updating production names in Regular..."
psfsetpsnames -p checkfix=fix -i source/glyph_data.csv source/CharisSIL-Regular.ufo -x

echo "-----Updating glyph orders in Regular..."
psfsetglyphorder -q --header sort_final_cdg -i source/glyph_data.csv source/CharisSIL-Regular.ufo -p backup=False -x

echo "-----Normalizing other UFOs..."
psfnormalize -p checkfix=fix source/CharisSIL-Bold.ufo       &
psfnormalize -p checkfix=fix source/CharisSIL-Italic.ufo     &
psfnormalize -p checkfix=fix source/CharisSIL-BoldItalic.ufo &
wait

# add building of composites here

echo "-----Syncing glyph orders, psnames, and other metadata to other UFOs..."
psfsyncmasters -q source/CharisSILRoman.designspace source/CharisSILItalic.designspace

# Fix problem with non-spacing marks due to glyphsLib bug
echo "-----Fixing width of non-spacing marks..."
psfremovegliflibkeys -q source/CharisSIL-Regular.ufo com.schriftgestaltung.Glyphs.originalWidth      &
psfremovegliflibkeys -q source/CharisSIL-Bold.ufo com.schriftgestaltung.Glyphs.originalWidth        &
psfremovegliflibkeys -q source/CharisSIL-Italic.ufo com.schriftgestaltung.Glyphs.originalWidth      &
psfremovegliflibkeys -q source/CharisSIL-BoldItalic.ufo com.schriftgestaltung.Glyphs.originalWidth  &
wait

echo "-----Preflight completed!"
